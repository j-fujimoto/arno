<?xml version="1.0"?>
<!-- Revolute-Revolute Manipulator -->
<robot name="icart_mini" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Constants for robot dimensions -->
  <xacro:property name="PI" value="3.1415926535897931"/>

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find icart_mini_description)/urdf/materials.xacro" />
  <xacro:include filename="$(find arno)/params/arno.gazebo"/>

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.010" rpy="0 0 0"/>
  </joint>

  <!-- Base Link -->
  <link name="base_link">
    <collision>
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
	    <box size=".485 .43 .15"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="-0.15 0 0.1" rpy="0 0 0"/>
      <geometry>
	    <box size=".485 .43 .15"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision name="collision">
      <origin xyz="-0.325 0.0 0.05" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.04625"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="-0.325 0.0 0.05" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.04625"/>
      </geometry>
    </visual>

    <inertial>
       <mass value="20" />
       <origin xyz="-0.08 0 0" rpy="0 0 0"/>
       <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1" />
    </inertial>
  </link>

  <link name="left_wheel">
    <collision name="collision">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
         <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0.0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>

  <joint type="revolute" name="left_wheel_hinge">
    <origin xyz="0 0.15 0.075" rpy="0 0 0"/>
    <child link="left_wheel">left_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>

  <link name="right_wheel">
    <collision name="collision">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
         <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin xyz="0 0.0 0" rpy="0 1.5707 1.5707"/>
      <geometry>
        <cylinder  length="0.03" radius="0.0725"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1" />
      <origin xyz="0 0.0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>

  <joint type="revolute" name="right_wheel_hinge">
    <origin xyz="0 -0.15 0.075" rpy="0 0 0"/>
    <child link="right_wheel">right_wheel</child>
    <parent link="base_link">base_link</parent>
    <axis xyz="0 1 0"/>
    <limit effort="100" velocity="100.0"  lower="-5000" upper="5000" />
  </joint>


  <transmission name="tran1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="tran2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_hinge">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_motor">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <joint name="laser_joint1" type="fixed">
    <parent link="base_link"/>
    <child  link="laser1"/>
    <origin xyz="0.2 -0.175 0.28" rpy="0 0 -0.785"/>
  </joint>
  <link name="laser1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
      <material name="red" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
    </collision>
  </link>

  <joint name="laser_joint2" type="fixed">
    <parent link="base_link"/>
    <child  link="laser2"/>
    <origin xyz="-0.2 0.175 0.28" rpy="0 0 2.356"/>
  </joint>
  <link name="laser2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
      <material name="red" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
    </collision>
  </link>

  <joint name="laser_joint3" type="fixed">
    <parent link="base_link"/>
    <child  link="laser3"/>
    <origin xyz="0.13 -0.19 0.53" rpy="0 0 -1.57"/>
  </joint>
  <link name="laser3">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
      <material name="red" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
    </collision>
  </link>

  <joint name="laser_joint4" type="fixed">
    <parent link="base_link"/>
    <child  link="laser4"/>
    <origin xyz="0.13 0.19 0.53" rpy="0 0 1.57"/>
  </joint>
  <link name="laser4">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
      <material name="red" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.06" />
      </geometry>
    </collision>
  </link>
</robot>
